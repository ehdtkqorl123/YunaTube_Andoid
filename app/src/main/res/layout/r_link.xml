<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_layout_inner_padding"
            android:layout_marginTop="@dimen/main_layout_inner_padding"
            android:paddingLeft="@dimen/keyline_1"
            android:paddingRight="@dimen/keyline_1">

            <ca.paulshin.yunatube.widgets.BezelImageView
                android:id="@+id/thumbnail"
                android:layout_width="124dp"
                android:layout_height="92dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher"
                app:maskDrawable="@drawable/bezel_background_mask"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_toRightOf="@id/thumbnail"
                android:clickable="true"
                android:focusable="true"
                android:text="Username"
                android:textColor="@color/body_text_1"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/desc"
                style="@style/TextBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/title"
                android:layout_below="@id/title"
                android:text="string/placeholder_lorem_ipsum"
                android:textColor="@color/body_text_2"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/main_layout_padding"
            android:layout_marginRight="@dimen/main_layout_padding"
            android:background="@color/grey"/>
    </LinearLayout>
</FrameLayout>