<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_layout_inner_padding"
        android:layout_marginTop="@dimen/main_layout_inner_padding">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_image_size"
            android:layout_height="@dimen/avatar_image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginTop="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_sn_1"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/keyline_2"
            android:clickable="true"
            android:focusable="true"
            android:text="Username"
            android:textColor="@color/body_text_1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/created_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/keyline_1"
            android:text="1m"
            android:textColor="@color/data_item_lightbg_body_text"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/comment"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/created_on"
            android:layout_alignRight="@id/created_on"
            android:layout_alignLeft="@+id/username"
            android:layout_below="@id/username"
            android:text="string/placeholder_lorem_ipsum"
            android:textColor="@color/body_text_2"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/main_layout_padding"
        android:layout_marginRight="@dimen/main_layout_padding"
        android:background="@color/grey"/>
</LinearLayout>