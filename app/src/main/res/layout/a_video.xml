<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/main_content"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/window_background"
                                                 tools:context=".ui.main.VideoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/player"
            android:scrollbars="vertical"/>

        <FrameLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/player">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/player"
            android:gravity="center"
            android:text="@string/no_comments"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="openActionMenu"
        android:src="@drawable/ic_write"
        app:backgroundTint="@color/deeporange"/>

    <FrameLayout
        android:id="@+id/comment_box"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_input_height"
        android:background="@color/message_background"
        android:elevation="@dimen/bottomsheet_elevation"
        android:padding="@dimen/comment_padding"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <include layout="@layout/p_comment_box"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/menu_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/window_background"
        android:elevation="@dimen/bottomsheet_elevation"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomsheet_item_height"
                android:gravity="center_vertical"
                android:onClick="comment"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding_normal"
                android:paddingRight="@dimen/content_padding_normal">

                <ImageView
                    android:layout_width="@dimen/bottomsheet_item_icon_dimen"
                    android:layout_height="@dimen/bottomsheet_item_icon_dimen"
                    android:src="@drawable/ic_comment_gray"/>

                <TextView
                    android:id="@+id/action_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_normal"
                    android:lines="1"
                    android:text="@string/fab_menu_comment"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomsheet_item_height"
                android:gravity="center_vertical"
                android:onClick="favorite"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding_normal"
                android:paddingRight="@dimen/content_padding_normal">

                <ImageView
                    android:id="@+id/icon_favorite"
                    android:layout_width="@dimen/bottomsheet_item_icon_dimen"
                    android:layout_height="@dimen/bottomsheet_item_icon_dimen"
                    android:src="@drawable/ic_favorite_gray"/>

                <TextView
                    android:id="@+id/action_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_normal"
                    android:lines="1"
                    android:text="@string/fab_menu_fave"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomsheet_item_height"
                android:gravity="center_vertical"
                android:onClick="share"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding_normal"
                android:paddingRight="@dimen/content_padding_normal">

                <ImageView
                    android:layout_width="@dimen/bottomsheet_item_icon_dimen"
                    android:layout_height="@dimen/bottomsheet_item_icon_dimen"
                    android:src="@drawable/ic_share_gray"/>

                <TextView
                    android:id="@+id/action_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_normal"
                    android:lines="1"
                    android:text="@string/fab_menu_share"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomsheet_item_height"
                android:gravity="center_vertical"
                android:onClick="comment"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding_normal"
                android:paddingRight="@dimen/content_padding_normal">

                <ImageView
                    android:layout_width="@dimen/bottomsheet_item_icon_dimen"
                    android:layout_height="@dimen/bottomsheet_item_icon_dimen"
                    android:src="@drawable/ic_youtube_gray"/>

                <TextView
                    android:id="@+id/action_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_normal"
                    android:lines="1"
                    android:text="@string/fab_menu_youtube"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomsheet_item_height"
                android:gravity="center_vertical"
                android:onClick="downloadVideo"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding_normal"
                android:paddingRight="@dimen/content_padding_normal">

                <ImageView
                    android:layout_width="@dimen/bottomsheet_item_icon_dimen"
                    android:layout_height="@dimen/bottomsheet_item_icon_dimen"
                    android:src="@drawable/ic_download_gray"/>

                <TextView
                    android:id="@+id/action_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_normal"
                    android:lines="1"
                    android:text="@string/fab_menu_download"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomsheet_item_height"
                android:gravity="center_vertical"
                android:onClick="report"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding_normal"
                android:paddingRight="@dimen/content_padding_normal">

                <ImageView
                    android:layout_width="@dimen/bottomsheet_item_icon_dimen"
                    android:layout_height="@dimen/bottomsheet_item_icon_dimen"
                    android:src="@drawable/ic_report_gray"/>

                <TextView
                    android:id="@+id/action_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_normal"
                    android:lines="1"
                    android:text="@string/fab_menu_report"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>