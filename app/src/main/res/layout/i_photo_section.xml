<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_layout_half_inner_padding"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <ca.paulshin.yunatube.widgets.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ca.paulshin.yunatube.widgets.SquareBezelImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/video_section_1"
            app:maskDrawable="@drawable/bezel_background_mask"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_bottom_corner_gradient_bg"
            android:gravity="center"
            android:padding="4dp"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="text\ntext2"
            android:textColor="@color/body_text_1_inverse"
            android:textSize="@dimen/images_text_size"
            android:textStyle="bold"/>

    </ca.paulshin.yunatube.widgets.SquareRelativeLayout>
</FrameLayout>