<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="6dp"
              android:paddingRight="6dp"
              tools:context="ca.paulshin.yunatube.ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/acrostic_poem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_layout_inner_padding"
        android:foreground="?selectableItemBackground">

        <ca.paulshin.yunatube.widgets.BezelImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_button_height"
            android:scaleType="centerCrop"
            android:src="@drawable/game_bg_1"
            app:maskDrawable="@drawable/bezel_background_mask"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/content_padding_normal"
            android:text="@string/acrostic_poem"
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/yuna_sticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_layout_inner_padding"
        android:foreground="?selectableItemBackground">

        <ca.paulshin.yunatube.widgets.BezelImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_button_height"
            android:layout_marginTop="@dimen/main_layout_inner_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/game_bg_2"
            app:maskDrawable="@drawable/bezel_background_mask"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="@dimen/content_padding_normal"
            android:text="@string/yuna_sticker"
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold"/>
    </FrameLayout>
</LinearLayout>
