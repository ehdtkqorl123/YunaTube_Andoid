<android.support.design.widget.CoordinatorLayout android:id="@+id/main_content"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/theme_primary_light"
                                                 tools:context=".ui.main.MessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_primary">

            <include layout="@layout/toolbar_actionbar_with_headerbar"/>
        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:background="@drawable/message_bg">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_write"
        app:backgroundTint="@color/deeporange"/>

    <RelativeLayout
        android:id="@+id/comment_window"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@color/message_background"
        android:clipToPadding="true"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <TextView
            android:id="@+id/my_username"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:text="UserName"
            android:textColor="@color/body_text_1_inverse"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:text="@string/close"
            android:textAllCaps="true"
            android:textColor="@color/body_text_1_inverse"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/close"
            android:gravity="center_vertical"
            android:text="@string/send"
            android:textAllCaps="true"
            android:textColor="@color/body_text_1_inverse"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/my_username"
            android:hint="@string/message_hint"
            android:background="@drawable/input_box_bg"
            android:gravity="top"
            android:maxLength="140"
            android:maxLines="4"
            android:padding="4dp"
            android:textSize="@dimen/text_size_medium"/>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>