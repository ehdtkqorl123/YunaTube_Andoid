                android:id="@+id/insta_thumb_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/placeholder_gray"
                app:maskDrawable="@drawable/bezel_background_mask"/>

            <ImageView
                android:id="@+id/insta_video_play_0"
                android:layout_width="@dimen/main_instagram_video_icon_dimen"
                android:layout_height="@dimen/main_instagram_video_icon_dimen"
                android:layout_gravity="top|right"
                android:src="@drawable/instagram_play"/>
        </FrameLayout>

